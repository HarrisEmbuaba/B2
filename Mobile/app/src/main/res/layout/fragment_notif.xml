<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".notif">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mega">
    <ImageView
        android:id="@+id/gambarpensil1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/pensil"
        android:backgroundTint="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="18dp"
        />
    <TextView
        android:id="@+id/tulisan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notifikasi"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#DD8B55"
        app:layout_constraintLeft_toRightOf="@+id/gambarpensil1"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <ImageView
        android:id="@+id/comen1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/comentcoklat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="18dp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bagcoklat"
        app:layout_constraintRight_toLeftOf="@id/comen1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="10dp"
        />
        <TextView
            android:id="@+id/dikirim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pesanan Dikirim"
            android:textStyle="bold"
            android:textSize="14dp"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/gambarpensil1"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="11dp"
            android:layout_marginLeft="18dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3-10-2022 10:00"
            app:layout_constraintTop_toBottomOf="@+id/gambarpensil1"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="11dp"
            android:layout_marginHorizontal="18dp"/>
        <TextView
            android:id="@+id/pesanan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pesanan"
            android:textSize="12dp"
            app:layout_constraintTop_toBottomOf="@id/dikirim"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="3dp"
            />
        <TextView
            android:id="@+id/id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="000000000167"
            android:textSize="12dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintLeft_toRightOf="@id/pesanan"
            app:layout_constraintTop_toBottomOf="@id/dikirim"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="3dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sedang dalam pengiriman"
            android:textSize="12dp"
            app:layout_constraintLeft_toRightOf="@+id/id"
            app:layout_constraintTop_toBottomOf="@id/dikirim"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="3dp"
            />
        <View
            android:id="@+id/line2"
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EEC19F"
            app:layout_constraintTop_toBottomOf="@+id/pesanan"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginLeft="18dp"
            android:layout_marginHorizontal="18dp"
            />
        <TextView
            android:id="@+id/dikemas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pesanan Dikemas"
            android:textSize="14dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/line2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="18dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2-10-2022 14:09"
            app:layout_constraintTop_toBottomOf="@+id/line2"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="3dp"
            android:layout_marginHorizontal="18dp"/>
        <TextView
            android:id="@+id/pesanan1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pesanan"
            android:textSize="12dp"
            app:layout_constraintTop_toBottomOf="@id/dikemas"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="3dp"
            />
        <TextView
            android:id="@+id/id1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="000000000167"
            android:textSize="12dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintLeft_toRightOf="@id/pesanan1"
            app:layout_constraintTop_toBottomOf="@id/dikemas"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="3dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sedang dikemas"
            android:textSize="12dp"
            app:layout_constraintLeft_toRightOf="@+id/id1"
            app:layout_constraintTop_toBottomOf="@id/dikemas"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="3dp"
            />
        <View
            android:id="@+id/line3"
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EEC19F"
            app:layout_constraintTop_toBottomOf="@+id/pesanan1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginLeft="18dp"
            android:layout_marginHorizontal="18dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>