<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/barang1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="9dp"
    app:cardCornerRadius="15dp"
    android:elevation="8dp"
    android:clickable="true"
    app:cardBackgroundColor="#FCF3EE"
    android:orientation="vertical"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp">
        <androidx.cardview.widget.CardView
            android:id="@+id/cardKosong1"
            android:layout_width="150dp"
            android:layout_height="157dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="9dp"
            app:cardCornerRadius="15dp">
            <ImageView
                android:id="@+id/foto"
                android:layout_width="150dp"
                android:layout_height="157dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/inp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="Bucket"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            android:layout_marginStart="13dp"
            app:layout_constraintTop_toBottomOf="@id/cardKosong1"
            app:layout_constraintStart_toStartOf="parent"/>
<!--        <ImageView-->
<!--            android:layout_width="30dp"-->
<!--            android:layout_height="30dp"-->
<!--            android:background="@drawable/ic_baseline_favorite_24"-->
<!--            app:layout_constraintTop_toBottomOf="@id/cardKosong"-->
<!--            app:layout_constraintRight_toRightOf="parent"-->
<!--            android:layout_marginHorizontal="13dp"-->
<!--            android:layout_marginTop="5dp"/>-->
        <TextView
            android:id="@+id/tvId1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/cardKosong1"
            app:layout_constraintStart_toStartOf="parent"
            android:text="id"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/desk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:text="isi bunga palsu"
            app:layout_constraintTop_toBottomOf="@id/inp"
            android:layout_marginStart="13dp"
            android:layout_marginTop="3dp"
            app:layout_constraintStart_toStartOf="parent"
            />
        <TextView
            android:id="@+id/hrg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:text="RP.35.000"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/desk"
            android:layout_marginStart="13dp"
            android:layout_marginTop="3dp"
            app:layout_constraintStart_toStartOf="parent"

            />
        <!--            <TextView-->
        <!--                android:id="@+id/stok"-->
        <!--                android:layout_width="wrap_content"-->
        <!--                android:layout_height="wrap_content"-->
        <!--                android:text="29 terjual"-->
        <!--                android:textSize="10dp"-->
        <!--                android:textStyle="normal"-->
        <!--                app:layout_constraintRight_toRightOf="parent"-->
        <!--                app:layout_constraintTop_toBottomOf="@id/deskripsi"-->
        <!--                android:layout_marginTop="8dp"-->
        <!--                android:layout_marginHorizontal="13dp"-->
        <!--                />-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/desk"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintRight_toLeftOf="@id/hrg"
            android:layout_marginHorizontal="13dp"
            android:text="Baru"
            android:textColor="#FF4C4C"
            android:layout_marginTop="3dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
