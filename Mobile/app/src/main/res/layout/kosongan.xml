<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/barang"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="7dp"
    app:cardCornerRadius="15dp"
    android:elevation="8dp"
    android:clickable="true"
    app:cardBackgroundColor="#FCF3EE"
    android:orientation="vertical"
    >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp">
            <ImageView
                android:id="@+id/fotobunga"
                android:src="@drawable/bunga"
                android:layout_width="150dp"
                android:layout_height="157dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_margin="9dp"/>
            <TextView
                android:id="@+id/inpo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="Bucket"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                android:layout_marginStart="13dp"
                app:layout_constraintTop_toBottomOf="@id/tvId"
                app:layout_constraintStart_toStartOf="parent"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/hatiputih"
                android:backgroundTint="#FCF3EE"
                app:layout_constraintTop_toBottomOf="@id/fotobunga"
                app:layout_constraintRight_toRightOf="parent"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_marginHorizontal="13dp"
                android:layout_marginTop="7dp"/>
            <TextView
                android:id="@+id/tvId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/fotobunga"
                app:layout_constraintStart_toStartOf="parent"
                android:text="id"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/deskripsi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:text="isi bunga palsu"
                app:layout_constraintTop_toBottomOf="@id/inpo"
                android:layout_marginStart="13dp"
                android:layout_marginTop="3dp"
                app:layout_constraintStart_toStartOf="parent"
                />
            <TextView
                android:id="@+id/harga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:text="RP.35.000"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@+id/deskripsi"
                android:layout_marginStart="13dp"
                android:layout_marginTop="3dp"
                app:layout_constraintStart_toStartOf="parent"

                />
            <TextView
                android:id="@+id/stok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="29 terjual"
                android:textSize="8dp"
                android:textStyle="normal"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/deskripsi"
                android:layout_marginTop="8dp"
                android:layout_marginHorizontal="13dp"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
