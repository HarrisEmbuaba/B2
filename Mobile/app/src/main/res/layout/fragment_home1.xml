<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".Activity.home1">
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/myRectangleView"
        android:layout_width="wrap_content"
        android:layout_height="172dp"
        android:background="@drawable/rectangle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <androidx.appcompat.widget.SearchView
        android:id="@+id/search"
        android:layout_width="235dp"
        android:layout_height="wrap_content"
        android:textColorHint="@color/white"
        android:layout_marginRight="100dp"
        android:background="@drawable/textrounded"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:queryHint="Search Here"
        app:iconifiedByDefault="false"
        />

    <ImageButton
        android:id="@+id/belanja"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/shopping"
        app:layout_constraintLeft_toRightOf="@id/search"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="8dp"
        android:background="@color/coklat"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/comment"
        app:layout_constraintLeft_toRightOf="@+id/belanja"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="8dp"
        android:background="@color/coklat"
        app:layout_constraintTop_toTopOf="parent"
        />
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#FCF3EE"
        app:layout_constraintTop_toBottomOf="@id/search"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="35dp"
        android:layout_marginTop="28dp"
        android:id="@+id/kotak"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="30dp">

            <TextView
                android:id="@+id/hi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="27dp"
                android:layout_marginTop="10dp"
                android:text="Hi,"
                android:textSize="24dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="27dp"
                android:layout_marginTop="10dp"
                android:text="@string/lengkapi"
                android:textSize="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/hi" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:id="@+id/puan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/kotak"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:layout_marginTop="16dp"
        >
        <Button
            android:id="@+id/buket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buket"
            android:backgroundTint="@color/coklat"/>
        <Button
            android:id="@+id/hampers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bingkisan"
            android:layout_marginLeft="5dp"
            android:backgroundTint="@color/coklat"/>
        <Button
            android:id="@+id/seserahan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seserahan"
            android:layout_marginLeft="5dp"
            android:backgroundTint="@color/coklat"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/terbaru"
        app:layout_constraintTop_toBottomOf="@+id/puan"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Produk Terbaru"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/puan"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/coklat"
        android:text="View All"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/terbaru"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="5dp"
        tools:listitem="@layout/kosongan"
        />
</androidx.constraintlayout.widget.ConstraintLayout>

