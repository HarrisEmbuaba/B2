<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".home1">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/myRectangleView"
        android:layout_width="match_parent"
        android:layout_height="172dp"
        android:background="@drawable/rectangle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<EditText
    android:id="@+id/search"
    android:layout_width="235dp"
    android:layout_height="wrap_content"
    android:hint="Search GIFT"
    android:layout_marginLeft="27dp"
    android:textColorHint="@color/white"
    android:background="@drawable/textrounded"
    android:padding="15dp"
    android:layout_marginTop="25dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    />
        <ImageButton
            android:id="@+id/belanja"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/shopping"
            app:layout_constraintLeft_toRightOf="@id/search"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="8dp"
            android:background="@color/coklat"
            app:layout_constraintTop_toTopOf="parent"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/comment"
            app:layout_constraintLeft_toRightOf="@+id/belanja"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="8dp"
            android:background="@color/coklat"
            app:layout_constraintTop_toTopOf="parent"
            />
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#FCF3EE"
            app:layout_constraintTop_toBottomOf="@id/search"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:cardCornerRadius="35dp"
            android:layout_marginTop="28dp"
            android:id="@+id/kotak"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="30dp"
                >
            <TextView
                android:id="@+id/hi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hi,"
                android:textSize="24dp"
                android:layout_marginLeft="27dp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lengkapi"
                android:textSize="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="27dp"
                app:layout_constraintTop_toBottomOf="@+id/hi"
                app:layout_constraintStart_toStartOf="parent"
                />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:id="@+id/puan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/kotak"
            app:layout_constraintStart_toStartOf="parent"
            android:gravity="center"
            android:layout_marginTop="16dp"
            >
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buket"
                android:backgroundTint="@color/coklat"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bingkisan"
                android:layout_marginLeft="11dp"
                android:backgroundTint="#EEC19F"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seserahan"
                android:layout_marginLeft="11dp"
                android:backgroundTint="#EEC19F"/>
        </LinearLayout>
        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rowCount="2"
            android:columnCount="2"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/puan"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >
<androidx.cardview.widget.CardView
    android:id="@+id/barang"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_row="0"
    android:layout_column="0"
    android:layout_margin="7dp"
    app:cardCornerRadius="15dp"
    android:elevation="8dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    app:cardBackgroundColor="#FCF3EE"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp">
        <ImageView
            android:id="@+id/fotobunga"
            android:src="@drawable/bunga"
            android:layout_width="150dp"
            android:layout_height="157dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="9dp"/>
        <TextView
            android:id="@+id/inpo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="Bucket"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            android:layout_marginStart="13dp"
            app:layout_constraintTop_toBottomOf="@id/fotobunga"
            app:layout_constraintStart_toStartOf="parent"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/hatiputih"
            android:backgroundTint="#FCF3EE"
            app:layout_constraintTop_toBottomOf="@id/fotobunga"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginHorizontal="13dp"
            android:layout_marginTop="7dp"/>
        <TextView
            android:id="@+id/deskripsi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:text="isi bunga palsu"
            app:layout_constraintTop_toBottomOf="@id/inpo"
            android:layout_marginStart="13dp"
            android:layout_marginTop="3dp"
            app:layout_constraintStart_toStartOf="parent"
            />
        <TextView
            android:id="@+id/harga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:text="RP.35.000"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/deskripsi"
            android:layout_marginStart="13dp"
            android:layout_marginTop="3dp"
            app:layout_constraintStart_toStartOf="parent"

            />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="29 terjual"
    android:textSize="8dp"
    android:textStyle="normal"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@id/deskripsi"
    android:layout_marginTop="8dp"
    android:layout_marginHorizontal="13dp"
    />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
